<?xml version="1.0" encoding="utf-8"?>
<!-- inner classes must be specified using <view class="classname" /> due to dollar sign -->
<view class="de.blau.android.propertyeditor.TagFormFragment$TagCheckRow" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout 
			android:orientation="horizontal"
			android:baselineAligned="false"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="?attr/Layout"
			android:saveEnabled="false"
		>
	    <TextView
	        android:id="@+id/textKey"
	        style="?attr/DownloadedMember"
	        android:saveEnabled="false"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="3"
	        android:dropDownWidth="wrap_content"
	        android:minHeight="34dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:singleLine="true"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	         />	 
	    <LinearLayout 
			android:orientation="horizontal"
			android:baselineAligned="false"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="?attr/Layout"
			android:saveEnabled="false"
			android:layout_weight="2"
		>   
	        <CheckBox
                android:id="@+id/valueSelected"
                android:saveEnabled="false"
                android:text=""
                android:layout_width="34dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical" 
        	    android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:layout_marginRight="1dp"
	            android:layout_marginBottom="1dp"
	        />
	        <TextView
	            android:id="@+id/valueDescription"
	            style="?attr/DownloadedMember"
	            android:saveEnabled="false"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginBottom="1dp"
	            android:layout_marginRight="1dp"
	            android:dropDownWidth="wrap_content"
	            android:minHeight="34dp"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:layout_gravity="center_vertical"
	         />	 
	     </LinearLayout>
	</LinearLayout>
</view>